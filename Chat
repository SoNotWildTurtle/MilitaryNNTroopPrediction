VEHICLE_CATEGORIES = {
    "tanks": ["T-90", "T-72", "Armata"],
    "apcs": ["BTR-82A", "BMP-3"],
    "artillery": ["2S19", "Grad", "TOS-1"],
    "aircraft": ["Su-35", "MiG-29"],
    "troops": ["infantry", "special forces", "airborne"]
}

